{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Openshift SCC",
    "description": "configuration for openshift compatibility",
    "type": "object",
    "properties": {
        "enabled": {
            "description": "enable rolebinding with openshift scc",
            "type": "boolean",
            "default": false
        },
        "scc": {
            "type": "string",
            "description": "name of scc for rolebinding",
            "default": "anyuid"
        }
    }
}
