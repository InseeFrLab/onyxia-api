{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Persistence",
  "type": "object",
  "properties": {
    "enabled": {
      "title": "Create a persistent volume",
      "type": "boolean",
      "default": true
    },
    "size": {
      "title": "Persistent volume size",
      "type": "string",
      "default": "10Gi",
      "form": true,
      "render": "slider",
      "sliderMin": 1,
      "sliderMax": 100,
      "sliderStep": 1,
      "sliderUnit": "Gi",
      "x-onyxia": {
        "overwriteDefaultWith": "region.resources.disk",
        "useRegionSliderConfig": "disk"
      },
      "hidden": {
        "value": false,
        "path": "enabled",
        "isPathRelative": true
      }
    }
  }
}
