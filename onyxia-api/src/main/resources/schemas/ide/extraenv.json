{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Environment variables",
    "description": "environment variables available within your service",
    "type": "array",
    "default": [],
    "items": {
      "title": "environment variable",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "CHANGE_ME",
          "pattern": "^[^ ]+$"
        },
        "value": {
          "type": "string",
          "default": ""
        }
      }
    }
  }